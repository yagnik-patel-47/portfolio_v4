---
interface Props {
  title: string
}
const { title } = Astro.props
import '@/styles/tailwind.css'
import '@fontsource-variable/inter'
import '@fontsource-variable/inter-tight'
import { ViewTransitions } from 'astro:transitions'
import SpeedInsights from '@vercel/speed-insights/astro'
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />

    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content="Yagnik Patel | Software Developer Portfolio" />
    <meta
      name="description"
      content="A modern portfolio showcasing frontend development projects, UI components, and creative web experiences built with Astro and TailwindCSS."
    />
    <meta name="author" content="Yagnik Patel" />
    <meta
      name="keywords"
      content="yagnik, yagnik patel, software developer, web developer, frontend developer, Astro, portfolio"
    />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://yagnik.me" />
    <meta
      property="og:title"
      content="Yagnik Patel | Software Developer Portfolio"
    />
    <meta property="og:site_name" content="Yagnik" />
    <meta
      property="og:description"
      content="A modern portfolio showcasing frontend development projects, UI components, and creative web experiences built with Astro and TailwindCSS."
    />
    <meta property="og:image" content="https://yagnik.me/og-image.png" />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content="https://yagnik.me" />
    <meta
      property="twitter:title"
      content="Yagnik Patel | Software Developer Portfolio"
    />
    <meta
      property="twitter:description"
      content="A modern portfolio showcasing frontend development projects, UI components, and creative web experiences built with Astro and TailwindCSS."
    />
    <meta property="twitter:image" content="https://yagnik.me/og-image.png" />

    <!-- Robots & Canonical -->
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href="https://yagnik.me" />

    <!-- Theme Color -->
    <meta name="theme-color" content="#fafafa" />
    <ViewTransitions />
    <SpeedInsights />
  </head>
  <body class="bg-white">
    <slot />
  </body>
</html>
